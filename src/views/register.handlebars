
    <section class="container">
        <h2>Registro</h2>
        <div class="message_login">
            <p>¿Ya tienes una cuenta? </p>
            <a href="/login" class="login_button">Iniciar Sesion</a>
        </div>
        <div class="container-messages_alerts">
        <h4 class="message">{{message}}{{#if error}}{{error}}{{/if}}</h4>
        </div>                                                      {{!-- Indicamos que subimos archivos --}}
        <form action="/api/sessions/register" method="post" enctype="multipart/form-data">
        <label for="first_name">Nombre</label>
        <input type="text" name="first_name" placeholder="Nombre">

        <label for="last_name">Apellido</label>
        <input type="text" name="last_name" placeholder="Apellido">

        <label for="age">Edad</label>
        <input type="text" name="age" placeholder="edad">

        <label for="email">Correo Electronico</label>
        <input type="text" name="email" placeholder="Correo Electronico">

        <label for="password">Contraseña</label>
        <input type="password" name="password" placeholder="Contraseña">

        <label for="avatar">imagen de perfil</label>
        <input type="file" name="avatar" id="avatar" placeholder="imagen de perfil">

        <button>Registrarse</button>
        </form>
    </section>



