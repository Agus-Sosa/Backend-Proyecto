

<section class="container-product_details">
    <div class="container-image">
        {{#contains productDetails.thumbnails 'https'}}
        <article>
            <img src="{{productDetails.thumbnails}}" alt="">
        </article>
        {{else}}
        <article>
            <img src="/multer/products/imgs/{{productDetails.thumbnails}}" alt="">
        </article>
        {{/contains}}
    </div>
    <div class="container-description">
        <h2>{{productDetails.title}}</h2>
        <p class="description">{{productDetails.description}}</p>
        <p class="category">Categoria: {{productDetails.category}}</p>
        <p class="price">${{productDetails.price}}</p>
        <div class="container_button">
        <button type="button" class="addToCart_button" id="addToCartBtn" onclick="addToCart('{{productDetails._id}}', '{{userCartId}}')">Agregar al carrito</button>
        {{#eq userRole 'admin'}}
        <button type="button" onclick="deleteProduct('{{productDetails._id}}')" class="delete_product">Eliminar producto</button>
        {{/eq}}
        </div>
    </div>
</section>
<script src="/js/products.js"></script>
<script src="/js/deleteProduct.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

